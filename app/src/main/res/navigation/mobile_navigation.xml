<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.navigationapp.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_touch_counter"
        android:name="com.example.navigationapp.ui.touchCounter.TouchCounterFragment"
        android:label="@string/menu_touch_counter"
        tools:layout="@layout/fragment_touch_counter" />

    <fragment
        android:id="@+id/nav_poker"
        android:name="com.example.navigationapp.ui.poker.PokerFragment"
        android:label="@string/menu_poker"
        tools:layout="@layout/fragment_poker" />

    <fragment android:id="@+id/nav_info"
        android:name="com.example.navigationapp.ui.info.InfoFragment"
        android:label="@string/menu_info"
        tools:layout="@layout/fragment_info" />
</navigation>