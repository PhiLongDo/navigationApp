<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".ui.info.InfoFragment"
    android:orientation="vertical"
    android:padding="5sp">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/app_icon"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/auth_name"
        android:textSize="50dp"
        android:fontFamily="serif"
        android:textColor="#DA39FF"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:paddingBottom="20dp"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:text="Kẻ thích lập trình, game, manga và light novel"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:text="Email: longdo805@gmail.com"
        android:autoLink="email"
        android:textAlignment="center"
        android:textColor="#00FF90"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:text="Phone: 0000000000"
        android:textAlignment="center"
        android:textColor="#00FF90"
        android:textSize="18dp" />
</LinearLayout>